<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sign.AuthenticationActivity"
    android:background="#DFDFDF">

    <RelativeLayout
        android:id="@+id/relativelayout_appbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/arrow_goback"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="휴대폰 본인인증"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout_auth_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="12dp"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/relativelayout_appbar"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/auth_checkbox_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/selector_terms"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/textview_auth_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="본인확인 서비스 이용약관 전체 동의"
                android:layout_marginLeft="12dp"
                app:layout_constraintStart_toEndOf="@id/auth_checkbox_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/imageview_auth_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_inner_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="24dp"
        android:text="이름"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_auth_1"/>

    <LinearLayout
        android:id="@+id/linearlayout_auth_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textview_inner_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/linearlayout_auth_foreign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            android:orientation="horizontal"
            android:layout_margin="12dp"
            android:gravity="center">
            <TextView
                android:id="@+id/textview_auth_foreign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내국인"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/imageview_auth_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/selector_arrow_down"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:id="@+id/view_foreign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="@color/gray"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.98"
            android:background="@null"
            android:hint="본인 실명 (통신사 가입 이름)"
            android:paddingLeft="12dp"
            android:importantForAutofill="yes"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_auth_jumin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="24dp"
        android:text="주민등록번호 앞 7자리"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayout_auth_2"/>

    <TextView
        android:id="@+id/textview_auth_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="24dp"
        android:text="휴대폰 정보"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/textview_auth_jumin"/>

    <LinearLayout
        android:id="@+id/linearlayout_auth_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textview_auth_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/linearlayout_auth_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            android:orientation="horizontal"
            android:layout_margin="12dp"
            android:gravity="center">
            <TextView
                android:id="@+id/textview_phone_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/imageview_auth_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/selector_arrow_down"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:id="@+id/view_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="@color/gray"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.98"
            android:background="@null"
            android:hint="휴대폰 번호 입력"
            android:paddingLeft="12dp"
            android:importantForAutofill="yes"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_complete_authentication"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="인증 완료"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/socar_color"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>