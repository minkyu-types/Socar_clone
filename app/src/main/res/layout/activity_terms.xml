<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.TermsActivity"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imageview_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 내용에 동의합니다."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageview_agree"/>

    <TextView
        android:id="@+id/textview_agree1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서비스 이용약관 전체 동의"/>

    <TextView
        android:id="@+id/textview_agree2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(필수) 쏘카 이용약관"/>

    <TextView
        android:id="@+id/textview_agree3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(필수) 개인정보 수집 및 이용 동의"/>

    <TextView
        android:id="@+id/textview_agree4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(필수) 위치정보 이용약관"/>

    <TextView
        android:id="@+id/textview_agree5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(선택) 할인쿠폰·이벤트 등 마케팅 정보 수신 동의"/>

    <TextView
        android:id="@+id/textview_agree6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모든 채널 수신 동의 시 1시간 무료 쿠폰 드려요"/>

</androidx.constraintlayout.widget.ConstraintLayout>