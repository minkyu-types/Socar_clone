<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign.register.RegisterActivity"
    android:background="@color/main_background">

    <RelativeLayout
        android:id="@+id/relativelayout_register_appbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/button_register_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/arrow_goback"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="기본정보"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/relativelayout_register_appbar"
        app:layout_constraintBottom_toTopOf="@id/button_complete_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:id="@+id/textview_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김민규"
                android:textStyle="bold"
                android:textSize="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeStepGranularity="2dp"
                android:textColor="@color/socar_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  님,"
                android:textSize="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeStepGranularity="2dp"
                app:layout_constraintStart_toEndOf="@id/textview_register_name"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/textview_register_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쏘카 이용을 위한 기본 정보를 입력해주세요."
                android:textStyle="bold"
                android:textSize="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeStepGranularity="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textview_register_name"/>
            <TextView
                android:id="@+id/textview_register_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textStyle="bold"
                android:textSize="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeStepGranularity="2dp"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@id/textview_register_1"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/edittext_register_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="1"
                android:inputType="text"
                android:hint="이메일 주소 입력"
                android:background="@drawable/shape_gray_edge"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:nextFocusDown="@id/edittext_register_password"
                app:layout_constraintTop_toBottomOf="@id/textview_register_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/textview_register_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textStyle="bold"
                android:textSize="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeStepGranularity="2dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edittext_register_id"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/edittext_register_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="1"
                android:inputType="text"
                android:hint="영문, 숫자 포함 8자리 이상 입력"
                android:background="@drawable/shape_gray_edge"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:nextFocusDown="@id/edittext_register_password_check"
                app:layout_constraintTop_toBottomOf="@id/textview_register_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/textview_register_password_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textStyle="bold"
                android:textSize="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeStepGranularity="2dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edittext_register_password"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/edittext_register_password_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="1"
                android:inputType="text"
                android:hint="비밀번호 재입력"
                android:background="@drawable/shape_gray_edge"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:nextFocusDown="@id/edittext_register_invitation_code"
                app:layout_constraintTop_toBottomOf="@id/textview_register_password_check"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/textview_register_invitation_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(선택) 초대 코드"
                android:textStyle="bold"
                android:textSize="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeStepGranularity="2dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/edittext_register_password_check"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/edittext_register_invitation_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="1"
                android:inputType="text"
                android:hint="프로모션코드 또는 추천인ID (이메일)"
                android:background="@drawable/shape_gray_edge"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@id/textview_register_invitation_code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/textview_register_info_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.03"
                android:text="· "
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/edittext_register_invitation_code"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/textview_register_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.97"
                android:text="초대 코드를 입력하세요! 첫 드라이브를 마치면 추가 혜택을 드립니다."
                android:textSize="14dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeStepGranularity="2dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/edittext_register_invitation_code"
                app:layout_constraintStart_toEndOf="@+id/textview_register_info_sub"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_complete_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="입력 완료"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/socar_color"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>